{% extends "base.html.twig" %}

{% block title %}
	Modification du profil utilisateur
{% endblock %}

{% block body %}

	<div class="container">
		<div class="mt-5 form-view">
			<h1 class="text-center my-5">Modification du profil</h1>
{{ form_start(accountForm) }}
			<div class="col-md-12 row">
				<div class="col-md-6 px-5 border-right">
					<div class="py-3"> {{form_row(accountForm.email)}}</div>
					<div class="py-3"> {{form_row(accountForm.userName)}}</div>
					<div class="py-3"> {{form_row(accountForm.avatar)}}</div>
				</div>
				<div class="col-md-6 px-5">
					<div class="py-3">{{form_row(accountForm.firstName)}}</div>
					<div class="py-3">{{form_row(accountForm.lastName)}}</div>
                    <button type="submit" class="btn btn-primary my-5 ">Enregistrer les modifications</button>
				</div>
				
{{ form_end(accountForm) }}

			</div>
		</div>
	</div>

{% endblock %}
