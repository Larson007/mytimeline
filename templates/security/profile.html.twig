{% extends "base.html.twig" %}

{% block title %}
	Modification du profil utilisateur
{% endblock %}

{% block body %}

	<div class="container">
		<div class="mt-5 form-view">
			<h1 class="text-center my-5">Modification du profil</h1>
			{{ form_start(accountForm) }}
			<div class="col-md-12 row">
				<div class="col-md-6 px-5 border-right">
					<div class="py-3"> {{form_row(accountForm.email, {label: 'Adresse email'}) }}</div>
					<div class="py-3"> {{form_row(accountForm.userName, {label: 'Pseudo'}) }}</div>
					<div class="py-3">{{form_row(accountForm.firstName, {label: 'Pr√©nom'}) }}</div>
					<div class="py-3">{{form_row(accountForm.lastName, {label: 'Nom'}) }}</div>
					<div class="py-3"> {{form_row(accountForm.avatar, {label: 'Image de profil'}) }}</div>
                    <button type="submit" class="btn btn-primary my-5 ">Enregistrer les modifications</button>
				</div>
				<div class="col-md-6 px-5">
				<div class="py-3">
					<a href="{{path('app_password-update')}}"><button type="button" class="btn btn-success my-3">Modifier votre mot de passe</button></a>
				</div>
				</div>
				{{ form_end(accountForm) }}

			</div>
		</div>
	</div>

{% endblock %}
