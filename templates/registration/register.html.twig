{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
<div class="container my-5">
	<div class="row form-view">
		<div class="col-md-6 mx-auto">
			<div class="bg-body-light py-3 px-3 mt-5">
				{% for flashError in app.flashes('verify_email_error') %}
					<div class="alert alert-danger" role="alert">{{ flashError }}</div>
				{% endfor %}

				<h1 class="h3 mb-3 font-weight-normal text-center">Inscription</h1>

				{{ form_start(registrationForm) }}
				<div class="px-2 py-2">{{ form_row(registrationForm.userName, {label: 'Nom d\'utilisateur'}) }}</div>
                <div class="px-2 py-2">{{ form_row(registrationForm.email, {label: 'Email'}) }}</div>
                <div class="px-2 py-2">{{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}</div>
                <div class="px-2 pt-3 pb-1 accord-terms">{{ form_row(registrationForm.agreeTerms, {label: 'Accepter les conditions générales'}) }}</div>
                <div class="col-md-12">
                <button type="submit" class="btn btn-lg btn-primary btn-block my-3 col-md-5 mx-auto">Inscription</button>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
